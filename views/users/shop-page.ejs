    <script>
        function addToCart(prodId){
            $.ajax({
                url:'/users/add-to-cart/'+prodId,
                method:'get',
                success:(response)=>{
                    if(response.status==true){
                        let id = '#'+prodId.toString()
                        $(id).html('Added to cart')
                    }
                }
            })
        }
