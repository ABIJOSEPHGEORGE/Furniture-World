<%- include('includes/users/head') %>
<%- include('includes/users/header') %>
<!--================Single Product Area =================-->
<style>
  figure.zoom {
  background-position: 50% 50%;
  position: relative;
  overflow: hidden;
  cursor: zoom-in;
}
figure.zoom img {
  transition: opacity 0.5s;
  display: block;
  width: 100%;
}
figure.zoom img:hover {
  opacity: 0;
}
</style>
<div class="product_image_area section_padding">
    <div class="container">
      <div class="row s_product_inner justify-content-between">
        <div class="col-lg-7 col-xl-7">
          <div class="product_slider_img">
            <div id="vertical">
                <%
                        product.images.forEach((image)=>{
                            %>
                            <div data-thumb="<%-image.URL%>" class="image-container">
                              <figure class="zoom" onmousemove="zoom(event)" style="background-image: url(<%-image.URL%>)">
                                <img class="image-zoom" src="<%-image.URL%>"/>
                              </figure>
                            </div>
                            <%
                        })
                %>
            </div>
          </div>
        </div>
        <div class="col-lg-5 col-xl-4">
          <div class="s_product_text">
            <h3><%-product.product_name%></h3>
            <h2>â‚¹ <%-product.sale_price%></h2>
            <ul class="list">
              <li>
                <a class="active" href="#">
                  <span>Category</span> : <%-parent.category_name%></a>
              </li>
              <li>
                <% if(product.stock>0){%>
                    <a href="#"> <span>Availibility</span> : In Stock</a>
                <%}else{%>
                    <a href="#"> <span>Availibility</span> : Out Of Stock</a>
                <%}%>
                
              </li>
            </ul>
            <p>
              <%-product.description%>
            </p>
            <div class="card_area d-flex justify-content-between align-items-center col-12">
              <div class="col-10 d-flex align-items-center justify-content-between">
                <a href="/users/add-to-cart/<%-product._id%>" class="btn_3 text-center col-8">add to cart</a>
                <a href="#" class="like_us"> <i class="ti-heart ms-3"></i> </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!--================End Single Product Area =================-->

  <!--================Product Description Area =================-->
  <section class="product_description_area mt-0">
    <div class="container">
      <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home"
            aria-selected="true">Description</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile"
            aria-selected="false">Measurements</a>
        </li>
      </ul>
      <div class="tab-content" id="myTabContent">
        <div class="tab-pane active" id="home" role="tabpanel" aria-labelledby="home-tab">
          <p><%-product.description%></p>
        </div>
        <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
          <div class="table-responsive">
            <table class="table">
              <tbody>
                <tr>
                  <td>
                    <h5>Width</h5>
                  </td>
                  <td>
                    <h5><%-product.measurements.width%> cm</h5>
                  </td>
                </tr>
                <tr>
                  <td>
                    <h5>Height</h5>
                  </td>
                  <td>
                    <h5><%-product.measurements.height%> cm</h5>
                  </td>
                </tr>
                <tr>
                  <td>
                    <h5>Depth</h5>
                  </td>
                  <td>
                    <h5><%-product.measurements.depth%> cm</h5>
                  </td>
                </tr>
                <tr>
                  <td>
                    <h5>Weight</h5>
                  </td>
                  <td>
                    <h5><%-product.measurements.max_load%> kg</h5>
                  </td>
                </tr>
            
              </tbody>
            </table>
          </div>
        </div>
        </div>
      </div>
    </div>
  </section>
  <!--================End Product Description Area =================-->
  <script>
    function zoom(e){
      var zoomer = e.currentTarget;
      e.offsetX ? offsetX = e.offsetX : offsetX = e.touches[0].pageX
      e.offsetY ? offsetY = e.offsetY : offsetX = e.touches[0].pageX
      x = offsetX/zoomer.offsetWidth*100
      y = offsetY/zoomer.offsetHeight*100
      zoomer.style.backgroundPosition = x + '%' + y + '%';
    }  
  </script>
  
  <%- include('includes/users/footer') %>