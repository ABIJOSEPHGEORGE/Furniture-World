			function resetPassword(event) {

				event.preventDefault();
				const reset_pass_form = document.getElementById('reset-pass-form');
				let formData = new FormData(reset_pass_form);
				let data = Object.fromEntries(formData);
				fetch("https://www.furnitureworld.site/users/profile-reset-password", {
					method: "PUT",
					body: JSON.stringify(data),
					headers: new Headers({
						'Content-Type': 'application/json; charset=UTF-8'
					})
				})
					.then((res) => {
						return res.json()
					})
					.then((res) => {

						if (res.err) {
							const reset_err = document.getElementById('reset-err');
							reset_err.innerText = res.err;
						} else {
							Swal.fire(
								'You have successfully reseted your password',
								'Kindly please login again',
								'success'
							).then((res) => {
								location.href = "https://www.furnitureworld.site/users/logout"
							})
						}
					})
					.catch((err) => {
						location.href = "https://www.furnitureworld.site/users/signin"
					})
			}


