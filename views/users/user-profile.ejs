			// updating the address
			function updateAdd(result) {
				fetch(`https://www.furnitureworld.site/users/update-address/${result.id}`, {
					method: "PUT",
					body: JSON.stringify(result),
					headers: new Headers({
						'Content-Type': 'application/json; charset=UTF-8'
					})
				}).then((res) => {
					return res.json()
				})
					.then((res) => {
						if (res == true) {
							select_address.innerHTML = ""
							addressMnmnt()
							Swal.fire({
								icon: 'success',
								title: 'Success',
								text: 'Address Updated',
							})
						}
					})
					.catch((err) => {
						location.href = "https://www.furnitureworld.site/users/signin"
					})
			}

			function addNewAddrss(addr) {
				fetch(`https://www.furnitureworld.site/users/add-new-address`,
					{
						method: "POST",
						body: JSON.stringify(addr),
						headers: new Headers({
							'Content-Type': 'application/json; charset=UTF-8'
						})
					})
					.then((res) => {
						return res.json()
					})
					.then((res) => {
						if (res === true) {
							Swal.fire({
								icon: 'success',
								title: 'Success',
								text: 'New address added',
							})
							select_address.innerHTML = ""
							addressMnmnt()
						} else {
							Swal.fire({
								icon: 'error',
								title: 'Oops...',
								text: 'Something went wrong!',
