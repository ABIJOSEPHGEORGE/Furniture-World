<%- include('includes/admin/head') %>
  <%- include('includes/admin/header') %>

    <section class="container w-100 mt-3 mx-0 p-0">
      <div class="container-fluid mb-3">
        <div class="row gy-4">
          <div class="col-md-3 col-sm-6">
            <a href="/admin/add-sub-category" class="card mb-0">
              <div class="card-body" style="background-color:#343a40;">
                <div class="d-flex align-items-end justify-content-between mb-2">
                  <div class="me-2">

                    <p class="text-sm text-uppercase text-gray-600 lh-2 mb-0">Add New Sub Category</p>
                  </div>
                  <span class="material-symbols-outlined">
                    add
                  </span>
                </div>
                <div class="progress" style="height: 3px">
                  <div class="progress-bar bg-dash-color-1" role="progressbar" style="width: 30%" aria-valuenow="30"
                    aria-valuemin="0" aria-valuemax="100"></div>
                </div>
              </div>
            </a>
          </div>
        </div>
      </div>

      <% if(subcat.length!=0){%>
        <table class="table table-striped table-dark">
          <thead>
            <tr>
              <th scope="col">SL. NO</th>
              <th scope="col">Sub Category Image</th>
              <th scope="col">Sub Category Name</th>
              <th scope="col">Parent Category Name</th>
              <th scope="col">Description</th>
              <th scope="col">Status</th>
              <th scope="col" class="text-center">Actions</th>
            </tr>
          </thead>
          <tbody>
            <%subcat.forEach((items)=>{%>
              <%items.forEach((subcat,index)=>{%>
                <tr>
                  <td scope="row"><%-index+1%></td>
                  <td class="w-25">
                    <img src="<%-subcat.sub_category_image%>" alt="" srcset="" class="w-50">
                  </td>
                  <td class="text-capitalize"><%-subcat.sub_category_name.replaceAll("-"," ")%></td>
                        <td class=" text-capitalize"><%-subcat.parent_category_name.replaceAll("-"," ")%></td>
                        <td><%-subcat.description%></td>
                        <% if(subcat.status===true){ %>
                        <td><span class=" badge badge-pill bg-success px-2 rounded-pill">Active</span></td>
                  <%}else{%>
                    <td><span class="badge badge-pill bg-danger px-2 rounded-pill">Inactive</span></td>
                    <%}%>
                      <td>
                        <div class="d-flex flex-row justify-content-evenly align-items-center">

                          <div>
                            <a href="/admin/edit-subcategory?id=<%-subcat._id%>&parent=<%-subcat.parent_category%>"
                              class="d-flex flex-column justify-content-center align-items-center px-2">
                              <span class="material-symbols-outlined text-white">edit</span>
                              <p class="text-white">Edit</p>
                            </a>
                          </div>
                          <div>
                            <a href="/admin/delete-subcategory/<%-subcat._id%>/<%-subcat.cloudinary_id%>/<%-subcat.parent_category%>?_method=DELETE"
                              class="d-flex flex-column justify-content-center align-items-center px-2">
                              <span class="material-symbols-outlined text-danger">Delete</span>
                              <p class="text-white">Delete</p>
                            </a>
                          </div>
                        </div>
                      </td>

                </tr>
                <% }) %>
                  <%})%>

          </tbody>
        </table>
        <% } %>

          <%if(subcat.length==0){%>
            <div class="w-100 d-flex flex-column justify-content-center align-items-center">
              <img src="/admin/img/Empty-bro.svg" class="w-25 h-25" alt="">
              <p class="text-white">No sub categories found</p>
              <a href="/admin/add-sub-category" class="text-white text-decoration-underline">Add new sub category</a>
            </div>

            <%}%>



    </section>

    <%- include('includes/admin/footer') %>