<%- include('includes/admin/head') %>
<%- include('includes/admin/header') %>

<section id="custom-container" class="container w-100 mt-3 mx-0 p-0">
    <div class="bg-black">
        <p class="text-white px-3 fw-bold py-3">Coupon / Edit Category</p>
    </div>
    <div class="form-container d-flex flex-column justify-content-center align-items-center">
        <p class="text-center text-white fw-bold fs-3">Edit Category</p>
    </div>
    <form action="/admin/update-category/<%-category._id%>?_method=PUT" method="post" class="d-flex flex-row align-items-center px-4" enctype="multipart/form-data">
        <div class="col-6">
            <div class="preview-img p-3 text-center d-block" id="img-preview">
                <div class="img-container" >
                    <img src="<%-category.category_image%>" class="w-50" alt="" srcset="">
                </div>
                <a href="#" class="text-white text-decoration-none py-2">
                    <div class="d-flex flex-row text-center" id="change-img">
                        Change Image
                        <span class="material-symbols-outlined">
                            edit
                            </span>
                    </div>
                </a>
            </div>
            <div class="form-group files color d-none text-center" id="choose-img">
                <label>Choose Category Image </label>
                <input type="file" class="form-control" name="category_image" multiple="" src="<%-category.category_image%>">
              </div>
        </div>
        <div class="d-flex flex-column align-items-center col-6 px-3">
            <div class="input-container d-flex flex-column col-12 py-1">
                <label for="category_name" class="text-white fw-bold fs-5 py-1">Category Name</label>
                <input type="text" name="category_name" id="category_name" class="rounded border-0 py-2 px-2" placeholder="Category Name" value="<%-category.category_name%>" required>
            </div>
            <div class="input-container d-flex flex-column col-12 py-1">
                <label for="category_description" class="text-white fw-bold fs-5 py-1">Description</label>
                <input type="text" name="category_description" id="category_description" class="rounded border-0 py-2 px-2" placeholder="Category Description" value="<%-category.description%>" required>
            </div>
    
            
            <%if (typeof err!="undefined" && err) {%>
                <p class="text-danger text-center"><%=err%></p>
            <%}%>
           <div class="d-flex flex-row justify-content-center align-items-center col-12 py-2">
                <button class="btn bg-white border-0 rounded mx-1 px-4 py-2"><a href="/admin/category-management" class="text-dark text-decoration-none">Cancel</a></button>
                <button class="btn bg-success border-0 rounded mx-1 px-4 py-2 text-white" type="submit">Update Category</button>
           </div>
        </div>
        
    </form>
</section>

<%- include('includes/admin/footer') %>